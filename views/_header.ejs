<div class="offcanvas-menu-overlay"></div>
<div class="offcanvas-menu-wrapper">
    <div class="offcanvas__close">+</div>
    <ul class="offcanvas__widget">
        <li><span class="icon_search search-switch"></span></li>
        <li><a href="/cart"><span class="icon_bag_alt"></span>
            <% if(locals.cart){ %> 
            <div class="tip"><% cart.quantity %> </div>
            <% } %> 
        </a></li>
    </ul>
    <div class="offcanvas__logo">
        <a href="/"><img src="/img/logom.jpg" alt=""></a>
    </div>
    <div id="mobile-menu-wrap"></div>
    <div class="offcanvas__auth">
        <a href="/auth/login">Login</a>
        <a href="/auth/signup">Register</a>
    </div>
</div>
  
  <!-- Header Section Begin -->
  <header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-lg-2">
                <div class="header__logo">
                    <a href="/" style="width: 70px;"><img src="/img/logom.jpg" alt="logo"></a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-7">
                <nav class="header__menu">
                    <ul>
                        <li class="active"><a href="/">Home</a></li>
                        <li><a href="/summer">Summer</a></li>
                        <li><a href="/winter">Winter</a></li>
                        <% if(locals.user){ %> 
                            <% if(user.isActive){ %> 
                                <li>
                                    <a href="/admin">Admin</a>
                                </li>
                            <% } %> 
                        <% } %> 
  
                        <li><a href="/contact">Contact</a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__right">
                    <div class="header__right__auth">
                        <% if(locals.user){ %> 
                            <a href="/auth/logout" style="font-size: 1.2rem;">Logout</a>
                        <% }else{ %> 
                            <a href="/auth/login">Login</a>
                            <a href="/auth/signup">Register</a>
                        <% } %> 
                    </div>
                    <ul class="header__right__widget">
                        <li><span class="icon_search search-switch"></span></li>
                        <% if(locals.user){ %> 
                            <% if(locals.data){ %> 
                            <li><a href="/cart"><span class="icon_bag_alt"></span>
                                <div class="tip"><%= data.quantity %> </div>
                            </a></li>
                            <% }else{ %> 
                                <li><a href="/cart"><span class="icon_bag_alt"></span>
                                    <div class="tip"> </div>
                                </a></li>
                            <% } %> 
                        <% }else{ %> 
                            <li><a href="/cart"><span class="icon_bag_alt"></span>
                                <div class="tip">0 </div>
                            </a></li>
                        <% } %> 
                    </ul>
                </div>
            </div>
        </div>
        <div class="canvas__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
<!-- Header Section End -->